<!-- Validation failure messages -->
<% if @review.present? %>
  <% if @review.errors.any? %>
    <% @review.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Add a new review
    </h1>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <form action="/create_review" method="post">
    
      <div class="form-group">
        <label for="title">
          Title
        </label>
    
        <input type="text" id="title" name="title" class="form-control" value="<%= @review.title %>">
      </div>
    
      <div class="form-group">
        <label for="body">
          Body
        </label>
    
        <input type="text" id="body" name="body" class="form-control" value="<%= @review.body %>">
      </div>
    
      <div class="form-group">
        <label for="user_id">
          User
        </label>
    
        <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @review.user_id %>">
      </div>
    
      <div class="form-group">
        <label for="beans_id">
          Beans
        </label>
    
        <input type="text" id="beans_id" name="beans_id" class="form-control" value="<%= @review.beans_id %>">
      </div>
    
      <button class="btn btn-block btn-outline-secondary">
        Create review
      </button>
    </form>
    
    <hr>
    
    <a href="/reviews">
      Go back
    </a>
  </div>
</div>