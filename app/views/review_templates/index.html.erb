<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All reviews
    </h1>

    <a href="/reviews/new" class="btn btn-block btn-outline-secondary">
      Add a new review
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Body
        </th>

        <th>
          User
        </th>

        <th>
          Beans
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @reviews.each do |review| %>
      <tr>
        <td>
          <%= review.id %>
        </td>

        <td>
          <%= review.title %>
        </td>

        <td>
          <%= review.body %>
        </td>

        <td>
          <%= review.user_id %>
        </td>

        <td>
          <%= review.beans_id %>
        </td>

        <td>
          <%= time_ago_in_words(review.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(review.updated_at) %> ago
        </td>

        <td>
          <a href="/reviews/<%= review.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
