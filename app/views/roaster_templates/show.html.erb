<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      <%= @roaster.roaster_name %> details
    </h1>
  </div>
</div>
<div class="container">
  <div class="row mt-3">
    <div class="col-8">
      <h1><a href="http://<%= @roaster.website_url %>"><%= @roaster.roaster_name %></a></h1>
    </div>
    
    <div class="col-4">
      <img src="<%= @roaster.image_url %>">
    </div>
    
  </div>
  
  <div class="row mt-3 px-3">
    <div class="card-deck">
      <div class="card border-primary w-50">
        <div class="card-header font-weight-bold bg-success">
          Roaster Description
        </div>
        
        <div class="card-body">
          <%= @roaster.roaster_description %> </br> </br>
          <%= @roaster.roaster_location %>
        </div>
      </div>
    
      <div class="card border-primary w-50">
        <div class="card-header font-weight-bold bg-success">
          Most Popular Beans
        </div>
        
        <div class="card-body">
          Here I will pull in the beans with the most favorites
        </div>
      </div>
    </div>
  </div>
  
  <div class="row my-3 px-3 font-italic">
    <%= @roaster.shipping_options %>
  </div>
  
  <div class="card border-primary my-3">
    <div class="card-header font-weight-bold bg-primary text-white">
      Roaster Reviews
    </div>
    <div class="card-body">
      Text of all reviews iterated over and over
    </div>
  </div>
  
  <div class="row mb-3">
    <div class="col">
      <a href="/roasters" class="btn btn-block btn-outline-secondary">
        Go back
      </a>
    </div>

    <div class="col">
      <a href="/roasters/<%= @roaster.id %>/edit" class="btn btn-block btn-outline-secondary">
        Edit roaster
      </a>
    </div>

    <div class="col">
      <a href="/delete_roaster/<%= @roaster.id %>" class="btn btn-block btn-outline-secondary">
        Delete roaster
      </a>
    </div>
  </div>
</div>