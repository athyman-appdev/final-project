<!-- Validation failure messages -->
<% if @favorite_roaster.present? %>
  <% if @favorite_roaster.errors.any? %>
    <% @favorite_roaster.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new favorite roaster
</h1>


<hr>

<form action="/create_favorite_roaster" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @favorite_roaster.user_id %>">
  </div>

  <div class="form-group">
    <label for="roaster_id">
      Roaster
    </label>

    <input type="text" id="roaster_id" name="roaster_id" class="form-control" value="<%= @favorite_roaster.roaster_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create favorite roaster
  </button>
</form>

<hr>

<a href="/favorite_roasters">
  Go back
</a>
