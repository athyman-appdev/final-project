<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All favorite roasters
    </h1>

    <a href="/favorite_roasters/new" class="btn btn-block btn-outline-secondary">
      Add a new favorite roaster
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Roaster
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @favorite_roasters.each do |favorite_roaster| %>
      <tr>
        <td>
          <%= favorite_roaster.id %>
        </td>

        <td>
          <%= favorite_roaster.user_id %>
        </td>

        <td>
          <%= favorite_roaster.roaster_id %>
        </td>

        <td>
          <%= time_ago_in_words(favorite_roaster.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(favorite_roaster.updated_at) %> ago
        </td>

        <td>
          <a href="/favorite_roasters/<%= favorite_roaster.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
