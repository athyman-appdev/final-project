<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Edit <%= @bean.country_of_origin %>
    </h1>
  </div>
</div>


<hr>
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <form action="/update_bean/<%= @bean.id %>" method="post">
    
      <div class="form-group">
        <label for="country_of_origin">
          Country of origin
        </label>
    
        <input type="text" id="country_of_origin" name="country_of_origin" class="form-control" value="<%= @bean.country_of_origin %>">
      </div>
    
      <div class="form-group">
        <label for="processing_type">
          Processing type
        </label>
    
        <input type="text" id="processing_type" name="processing_type" class="form-control" value="<%= @bean.processing_type %>">
      </div>
    
      <div class="form-group">
        <label for="flavor_profiles">
          Flavor profiles
        </label>
    
        <input type="text" id="flavor_profiles" name="flavor_profiles" class="form-control" value="<%= @bean.flavor_profiles %>">
      </div>
    
      <div class="form-group">
        <label for="price">
          Price
        </label>
    
        <input type="text" id="price" name="price" class="form-control" value="<%= @bean.price %>">
      </div>
    
      <div class="form-group">
        <label for="roaster_id">
          Roaster
        </label>
    
        <%= select_tag("roaster_id", options_from_collection_for_select(Roaster.all, :id, :roaster_name, @bean.try(:roaster_id)), :class => "form-control") %>
      </div>
      
      <div class="form-group">
        <label for="acidity">
          Acidity
        </label>
    
        <input type="text" id="acidity" name="acidity" class="form-control" value="<%= @bean.acidity %>">
      </div>
      
      <div class="form-group">
        <label for="elevation">
          Elevation
        </label>
    
        <input type="text" id="elevation" name="elevation" class="form-control" value="<%= @bean.elevation %>">
      </div>
      
      <div class="form-group">
        <label for="cultivar">
          Cultivar
        </label>
    
        <input type="text" id="cultivar" name="cultivar" class="form-control" value="<%= @bean.cultivar %>">
      </div>
      
      <div class="form-group">
        <label for="roast_profile">
          Roast Profile
        </label>
    
        <input type="text" id="roast_profile" name="roast_profile" class="form-control" value="<%= @bean.roast_profile %>">
      </div>
      
      <div class="form-group">
        <label for="harvest_season">
          Harvest Season
        </label>
    
        <input type="text" id="harvest_season" name="harvest_season" class="form-control" value="<%= @bean.harvest_season %>">
      </div>
      
      <div class="form-group">
        <label for="image_url">
          URL for the Bean Image
        </label>
    
        <input type="text" id="image_url" name="image_url" class="form-control" value="<%= @bean.image_url %>">
      </div>
    
      <button class="btn btn-block btn-outline-secondary">
        Create bean
      </button>
    </form>
    
    <hr>
    
    <a href="/beans">
      Go back
    </a>
  </div>
</div>
