<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Bean #<%= @bean.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/beans" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/beans/<%= @bean.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit bean
        </a>
      </div>

      <div class="col">
        <a href="/delete_bean/<%= @bean.id %>" class="btn btn-block btn-outline-secondary">
          Delete bean
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Country of origin
      </dt>
      <dd>
        <%= @bean.country_of_origin %>
      </dd>

      <dt>
        Processing type
      </dt>
      <dd>
        <%= @bean.processing_type %>
      </dd>

      <dt>
        Flavor profiles
      </dt>
      <dd>
        <%= @bean.flavor_profiles %>
      </dd>

      <dt>
        Price
      </dt>
      <dd>
        <%= @bean.price %>
      </dd>

      <dt>
        Roaster
      </dt>
      <dd>
        <%= @bean.roaster_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@bean.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@bean.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

